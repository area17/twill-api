{
  "name": "area17/twill-api",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Patrick VÃ©zina",
      "email": "patrick@area17.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "area17/twill": "^2.8.2|^3.0|3.x-dev",
    "illuminate/support": "^9.12|^10.0",
    "laravel-json-api/laravel": "^3.0",
    "spatie/laravel-package-tools": "^1.11"
  },
  "require-dev": {
    "fakerphp/faker": "^1.15",
    "friendsofphp/php-cs-fixer": "^3.0",
    "laravel-json-api/testing": "^2.1",
    "mockery/mockery": "^1.4",
    "nunomaduro/collision": "^6.2",
    "orchestra/testbench": "^8.0",
    "phpunit/phpunit": "^9.5",
    "symfony/yaml": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "A17\\Twill\\API\\": "src"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "@php ./vendor/bin/testbench package:discover --ansi"
    ],
    "test": "./vendor/bin/testbench package:test"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "A17\\Twill\\API\\ServiceProvider",
        "A17\\Twill\\API\\RouteServiceProvider"
      ],
      "aliases": {
        "TwillAPI": "A17\\Twill\\API\\Facade"
      }
    }
  },
  "minimum-stability": "alpha",
  "prefer-stable": true
}
